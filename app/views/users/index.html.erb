<h2> Photo Sharing! </h2>

<% @users.each do |user| %>
  <h5>Contributor: <%= link_to user.name, user_path(user) %></h5>
 <h6> Photos </h6>
  <% user.photos.each do |photo| %>
    <%= link_to image_tag(photo.image.url(:medium)), user_photo_path(user, photo) %></br>
	<p><%= photo.description %></p></br>
	</br>
  <% end %>
<% end %>


<%= link_to "Sign Up", new_user_path, :class => "btn btn-default" %>

<%= link_to "Log In", new_session_path, :class => "btn btn-default" %>

<% if @user %>
  <%= link_to "Post a Photo", new_user_photo_path(@user), :class => "btn btn-default" %>
<% end %>